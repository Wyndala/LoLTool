<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset={{ _charset }}"/>
    <meta name="robots" content="noindex,nofollow" />
    <title>{% block title 'LoLTool Bundle' %}</title>
    {% block head %}
        <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{ asset('bundles/loltool/css/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/loltool/css/style.css') }}" />

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script src="{{ asset('bundles/loltool/js/bootstrap.js') }}"></script>
    {% endblock %}
</head>

<body>
<img class="bg-image" src="{{ asset('bundles/loltool/images/bg.jpg') }}"/>
<img class="bg-vignette" src="{{ asset('bundles/loltool/images/bg_vignette.png') }}"/>
{% block body %}
    {% block navigation %}
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('lo_l_tool_homepage') }}">LoLTool</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{ path('lo_l_tool_homepage') }}">Home</a></li>
                        <li><a href="#about">About</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    {% endblock %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message">
            <em>Notice</em>: {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="container">
        {% block content %}
        {% endblock %}
    </div>
{% endblock %}
</body>
</html>